@{
}
<a class="btn btn-dark" asp-action="Index" asp-controller="Grade" asp-route-id="@Model.profile.ID">Back</a>

<form enctype="multipart/form-data" method="post" class="AddCourseForm" asp-action="EditSemester" asp-controller="Grade">
	<div class="modal-body">
		<h3>Edit Semester</h3>
		<input hidden asp-for="profile.ID" value="@Model.profile.ID">
		<input hidden asp-for="profile.Name" value="@Model.profile.Name">
		<input hidden asp-for="newSemester.Id" value="@Model.newSemester.Id">
		
		<label class="form-label text-left" asp-for="newSemester.Name">Semester Name</label>
		<input class="form-control" asp-for="newSemester.Name" value="@Model.newSemester.Name">

		<label class="form-label text-left" asp-for="newSemester.Year">Semester Year</label>
		<input class="form-control" asp-for="newSemester.Year" value="@Model.newSemester.Year">

		<label class="form-label text-left" asp-for="newSemester.SemesterOrder">Semester Order</label>
		<input class="form-control" asp-for="newSemester.SemesterOrder" value="@Model.newSemester.SemesterOrder">
	</div>
	<div class="modal-footer">
		<input type="submit" class="btn btn-primary" value="Save Changes">
	</div>
</form>