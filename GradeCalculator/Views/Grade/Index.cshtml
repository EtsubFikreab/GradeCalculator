@using GradeCalculator.ViewModel;
@model GradeViewModel
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h4>
    @Model.profile.Name's Grades
</h4>

<div class="semesters">
	<div class="semester">
		<div class="semester-name">
			Term Autumn
		</div>
		<table class="Course-table">
			<thead>

				<tr>
					<th>Course Code</th>
					<th>Course Title</th>
					<th>Credit Hour</th>
					<th>Grade</th>
					<th>Grade Point</th>
				</tr>
			</thead>
			<tbody>

				<tr>
					<td class="CourseCode">CS111</td>
					<td class="CourseTitle">Introduction to Computer Science</td>
					<td class="CreditHour">5</td>
					<td class="CourseGrade">A+</td>
					<td class="GradePoint">20</td>
				</tr>
				<tr>
					<td>CS111</td>
					<td>Introduction to Computer Science</td>
					<td>5</td>
					<td>A+</td>
					<td>20</td>
				</tr>
				<tr>
					<td>CS111</td>
					<td>Introduction to Computer Science</td>
					<td>5</td>
					<td>A+</td>
					<td>20</td>
				</tr>
			</tbody>
		</table>
		<div class="semester-bottom">
			<div class="GPA-Section">
				<div class="AverageGPA">
					Average GPA: 3.0
				</div>
				<div class="CGPA">
					CGPA: 3.0
				</div>
			</div>
			<div class="options-section">
				<form method="post">
					<input type="submit" value="Delete">
				</form>
				<form method="post">
					<input type="submit" value="Edit">
				</form>
			</div>
		</div>
	</div>

</div>
<div>
	<form class="AddSemester" method="post" enctype="multipart/form-data" asp-controller="Grade" asp-action="AddSemester">
		<h3>Add Semester Form</h3>
		<input hidden asp-for="profile.ID" value="@Model.profile.ID">
		<input hidden asp-for="profile.Name" value="@Model.profile.Name">
		<label asp-for="newSemester.Name">Semester Name</label>
		<input asp-for="newSemester.Name">
		<label asp-for="newSemester.Year">Semester Year</label>
		<input asp-for="newSemester.Year">
		<label asp-for="newSemester.SemesterOrder">Semester Order</label>
		<input asp-for="newSemester.SemesterOrder">
		<input type="submit" value="Add Semester" class="AddSemester-submit">
	</form>
</div>
<style>
	.semesters {
		display: flex;
		flex-wrap: wrap;
		width: 100%;
	}

	.semester {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		margin: 2ch;
		width: 68ch;
		border-radius: 15px;
		overflow: hidden;
		background-color: #219ebc;
	}

	.semester-name {
		color: white;
		width: 100%;
		height: 4ch;
		text-align: center;
		padding-top: 1ch;
		overflow: hidden;
		background-color: #023047;
	}

	.semester-bottom {
		width: 100%;
		display: flex;
		justify-content: space-around;
		align-items: center;
		background-color: #8ecae6;
		height: 8ch;
	}

	.options-section {
		display: flex;
		flex-direction: row;
	}

		.options-section form {
			margin: 1ch;
		}

	.GPA-Section {
		text-align: left;
	}

	.Course-table {
		text-align: center;
	}

	th,
	td {
		padding: 7px;
		text-align: center;
	}

	.AddSemester {
		display: flex;
		flex-direction: column;
		width: 50ch;
		background-color: #8ecae6;
		margin-inline: auto;
		padding: 3ch;
		padding-inline: 7ch;
		border-radius: 15px;
	}

		.AddSemester label {
			text-align: left;
			margin-top: 1ch;
			margin-bottom: 0.5ch;
		}

	.AddSemester-submit {
		margin: 2ch;
		margin-top: 3ch;
		margin-inline: auto;
		width: 20ch;
	}
</style>

