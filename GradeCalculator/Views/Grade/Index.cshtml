<h4>
    Welcome Back, @Model.Name
</h4>

<div class="semesters">
	<div class="semester">
		<div class="semester-name">
			Term Autumn
		</div>
		<table class="Course-table">
			<thead>

				<tr>
					<th>Course Code</th>
					<th>Course Title</th>
					<th>Credit Hour</th>
					<th>Grade</th>
					<th>Grade Point</th>
				</tr>
			</thead>
			<tbody>

				<tr>
					<td class="CourseCode">CS111</td>
					<td class="CourseTitle">Introduction to Computer Science</td>
					<td class="CreditHour">5</td>
					<td class="CourseGrade">A+</td>
					<td class="GradePoint">20</td>
				</tr>
				<tr>
					<td>CS111</td>
					<td>Introduction to Computer Science</td>
					<td>5</td>
					<td>A+</td>
					<td>20</td>
				</tr>
				<tr>
					<td>CS111</td>
					<td>Introduction to Computer Science</td>
					<td>5</td>
					<td>A+</td>
					<td>20</td>
				</tr>
			</tbody>
		</table>
		<div class="semester-bottom">
			<div class="GPA-Section">
				<div class="AverageGPA">
					Average GPA: 3.0
				</div>
				<div class="CGPA">
					CGPA: 3.0
				</div>
			</div>
			<div class="options-section">
				<form method="post">
					<input type="submit" value="Delete">
				</form>
				<form method="post">
					<input type="submit" value="Edit">
				</form>
			</div>
		</div>
	</div>

</div>

<style>
	.semesters {
		display: flex;
		flex-wrap: wrap;
		width: 100%;
	}

	.semester {
		display: flex;
		flex-direction: column;
		align-items: center;
		justify-content: center;
		margin: 2ch;
		width: 68ch;
		border-radius: 15px;
		overflow: hidden;
		background-color: #219ebc;
	}

	.semester-name {
		color: white;
		width: 100%;
		height: 4ch;
		text-align: center;
		padding-top: 1ch;
		overflow: hidden;
		background-color: #023047;
	}

	.semester-bottom {
		width: 100%;
		display: flex;
		justify-content: space-around;
		align-items: center;
		background-color: #8ecae6;
		height: 8ch;
	}

	.options-section {
		display: flex;
		flex-direction: row;
	}

		.options-section form {
			margin: 1ch;
		}

	.GPA-Section {
		text-align: left;
	}

	.Course-table {
		text-align: center;
	}

	th,
	td {
		padding: 7px;
		text-align: center;
	}
</style>

